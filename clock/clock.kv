# ClockLayout:
#     time_prop: time

#     Label:
#         id: time

BoxLayout:
    orientation: 'vertical'

    Label:
        id: time
        text: '[b]00[/b]:00:00'

    BoxLayout:
        height: 160
        orientation: 'horizontal'
        padding: 20
        spacing: 20
        size_hint: (1, None)

        RobotoButton:
            id: start_stop
            text: 'Start'
            on_press: app.start_stop()

        RobotoButton:
            id: reset
            text: 'Reset'
            on_press: app.reset()
            background_normal: 'pics/red_button_normal.png'
            background_down: 'pics/red_button_down.png'

    Label:
        id: stopwatch
        text: '00:00.[size=40]00[/size]'

<Label>:
    font_name: 'Roboto'
    font_size: 60
    markup: True

<RobotoButton@Button>:
    font_name: 'Roboto'
    font_size: 25
    bold: True
    background_normal: 'pics/button_normal.png'
    background_down: 'pics/button_down.png'
    border: (2, 2, 2, 2)
